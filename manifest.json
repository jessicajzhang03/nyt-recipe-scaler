{
    "name": "Recipe Scaler",
    "version": "0.1.0",
    "description": "Scales recipes automatically",
    "content_scripts": [
        {
            "matches": ["https://cooking.nytimes.com/recipes/*"], 
            "js": ["recipeScaler.js"]
        }
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Scale a recipe",
        "default_popup": "popup.html"
    }, 
    "icons": {
        "344": "icon/cooking-book.png"
    }
}